@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Empleado - Facturación</title>

    <!-- Se usan exactamente los mismos archivos CSS para mantener la consistencia visual -->
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="css/admin.css" rel="stylesheet" />
    <HeadOutlet />
</head>
<body>
    <div class="admin-layout">

        <!-- LA ÚNICA DIFERENCIA CLAVE ESTÁ AQUÍ -->
        <!-- Se llama al componente de navegación del empleado en lugar del de admin -->
        <EmpleadoSideNav />

        <main class="main-content">
            <div class="admin-background-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
                <div class="shape shape-4"></div>
                <div class="shape shape-5"></div>
                <div class="shape shape-6"></div>
            </div>
            <div class="page-content-wrapper">
                @Body
            </div>
        </main>
    </div>
</body>
</html>

@code {
    // Se mantiene el mismo código JS interop para la animación de fondo
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initLoginAnimation");
        }
    }
}
