@page "/"
@inject NavigationManager Nav
@inject AuthService Auth

<h3>Iniciar sesi칩n</h3>

<EditForm Model="@model" OnValidSubmit="@OnSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Correo</label>
        <InputText @bind-Value="model.Correo" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Contrase침a</label>
        <InputPassword @bind-Value="model.Contrasena" class="form-control" />
    </div>

    <button class="btn btn-primary" disabled="@busy">
        @if (busy) { <span>Ingresando...</span> } else { <span>Ingresar</span> }
    </button>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger mt-3">@error</div>
    }
</EditForm>

@code {
    private LoginModel model = new();
    private string? error;
    private bool busy;

    private async Task OnSubmit()
    {
        error = null;
        busy = true;
        try
        {
            var ok = await Auth.LoginAsync(model.Correo!, model.Contrasena!);
            if (ok)
            {
                // Redirige a una p치gina protegida o al dashboard
                Nav.NavigateTo("/productos", forceLoad: true);
            }
            else
            {
                error = "Correo o contrase침a incorrectos.";
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            busy = false;
        }
    }

    public class LoginModel
    {
        [Required, EmailAddress]
        public string? Correo { get; set; }

        [Required]
        public string? Contrasena { get; set; }
    }
}
